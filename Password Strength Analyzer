import re

def analyze_password_strength(password):
    #Evaluates password strength based on length, digits, case, and symbols.
    
    score = 0
    feedback = []

    # 1. Length Check
    if len(password) >= 8:
        score += 1
    else:
        feedback.append(" Increase length to at least 8 characters.")

    # 2. Digit Check (0-9)
    if re.search(r"\d", password):
        score += 1
    else:
        feedback.append(" Add at least one number (0-9).")

    # 3. Uppercase & Lowercase Check
    if re.search(r"[A-Z]", password) and re.search(r"[a-z]", password):
        score += 1
    else:
        feedback.append(" Use both uppercase and lowercase letters.")

    # 4. Special Character Check
    if re.search(r"[@$!%*#?&]", password):
        score += 1
    else:
        feedback.append(" Add a special character (@, $, !, etc.).")

    # Final Result Logic
    print(f"\n{'='*40}")
    print(f" PASSWORD ANALYSIS: {password}")
    print(f"{'='*40}")

    if score == 4:
        print(" Strength: STRONG")
        print(" Your password meets all security standards.")
    elif score == 3:
        print(" Strength: MEDIUM")
    else:
        print(" Strength: WEAK")

    # Show feedback if any rules failed
    for tip in feedback:
        print(tip)
    
    print(f"{'='*40}\n")

if __name__ == "__main__":
    # Test with different passwords
    test_pwd = input("Enter a password to test: ")
    analyze_password_strength(test_pwd)